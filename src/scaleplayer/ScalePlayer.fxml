<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane id="root" styleClass="root" stylesheets="@ScalePlayer.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scaleplayer.ScalePlayer">
   <center>
      <HBox id="hb" alignment="CENTER" minWidth="-Infinity" BorderPane.alignment="CENTER">
         <children>
            <Button id="playScaleBtn" fx:id="playScaleBtn" mnemonicParsing="false" onAction="#HandlePlayBotton" text="PlayScale" />
            <Button id="stopPlayingBtn" fx:id="stopPlayingBtn" mnemonicParsing="false" onAction="#HandleStopBotton" text="Stop Playing" />
         </children>
      </HBox>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
            <Menu id="menu" mnemonicParsing="false" text="File">
              <items>
                <MenuItem id="menuItem1" fx:id="menuItem1" mnemonicParsing="false" onAction="#HandleExit" text="Exit" />
              </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
</BorderPane>
